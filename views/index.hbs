    <section id="services_section" class = "py-5">


    <div class="container">
     <h1 class = "text-center">Services we provide</h1>

     <div class="row mt-5">
      {{!-- first services col --}}
      {{#each service}}
      <div class="col-md-4">
        <div class="card">
          <div class="card-body">
           <i class="{{this.icon}}"></i>
             <h3 class = "card-title">{{this.title}}</h3>
             <p>{{this.description}}</p>
             <a href="{{this.link}}">{{this.linkText}}</a>
